@model List<TravelTrip.Models.Concrete.Blog>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<body>

    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot">Gezi rotanı Kerem ile PLANLA!</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/Templates/web/images/glass.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Restoranlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/Templates/web/images/flight.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Uçuşlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/Templates/web/images/group.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Yapılacak Şeyler</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/Templates/web/images/key.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Araba Kiralama</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">

                        <div class="slider" style="width:650px;height:400px">
                            <ul class="rslides" id="slider1">
                                @foreach(var item in Model) {
                                <li><img style="width:1000px;height:400px;"   src="@item.BlogImage" alt=""></li>

                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3 style="text-align:center">KeremTraver'a HOŞ GELDİN SAYIN YOLCU!</h3>
                    <p style="text-align:center">Eşsiz bir deneyim sahibi olmak istediğinizi duyduk.Doğru yere geldiğinizi söyleyebilirim.Burda tanımadığınız insanların bloglarını görebilir,yorum atabilir ve kendi bloglarınızı oluşturabilirsiniz.Keyifli Seyahatlar ve Bonjour Sir!</p>
                </div>

                <div class="grids">
                    <div class="box1">
                        @Html.Action("Partial2")

                        @Html.Action("Partial3")

                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

