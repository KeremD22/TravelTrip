@model TravelTrip.Models.Concrete.Comment
@{
    ViewBag.Title = "YorumGüncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Güncelle</h2>


<form class="form-group" method="post">

    @Html.HiddenFor(x => x.Id)
    <label>Kullanıcı Adı</label>
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    <label>Yorum</label>
    @Html.TextAreaFor(x => x.Comment1, 15, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Yorum Güncelle</button>

</form>