@model List<TravelTrip.Models.Concrete.Comment>

@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.UserName</td>
    <td>@item.Mail</td>
    <td>@item.Comment1</td>
    <td>@item.Blog.Title</td>
    <td><a href="/Admin/YorumSil/@item.Id" class="btn btn-outline-danger">Sil</a></td>
    <td><a href="/Admin/YorumGüncelle/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
</tr>
    }
</table>