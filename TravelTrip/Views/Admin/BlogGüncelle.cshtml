@model TravelTrip.Models.Concrete.Blog

@{
    ViewBag.Title = "BlogGüncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelleme Sayfası</h2>

<form class="form-group" method="post">

    @Html.HiddenFor(x=>x.BlogId)
    <label>Başlık</label>
    @Html.TextBoxFor(x =>x.Title, new { @class = "form-control" })
    <br />
    <label>Tarih</label>
    @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
    <br />

    <label>Resim</label>
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description,15,1, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Blog Güncelle</button>

</form>